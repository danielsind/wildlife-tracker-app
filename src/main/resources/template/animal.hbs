{{#partial "content"}}
    <div class="pages">
        <h2 class="text-center">Non Endangered Animals</h2>
    {{#if nonEndnageredAnimals}}
            <div>
                <table class="table">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Health</th>
                        <th>Age</th>
                        <th>Type</th>
                    </tr>
                    </thead>
                    {{#each nonEndangeredAnimals }}
                        <tbody>
                        <tr>
                            <td>{{ id }}</td>
                            <td>{{ name }}</td>
                            <td>{{health}}</td>
                            <td>{{age}}</td>
                            <td>{{ type }}</td>
                        </tr>
                        </tbody>
                    {{/each}}
                </table>
            </div>
    {{else}}
            <p>No animal has been recorded. Please add an animal inside the forest.</p>
            <a href="/nonendangered/form" class="otherbuttons">Add animal</a>
        </div>
    {{/if}}
{{/partial}}
{{> layout.hbs}}